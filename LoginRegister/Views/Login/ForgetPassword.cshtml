@model UserModel
@{
    ViewData["Title"] = "Forget Password";
}
<form method="post">

    <div class="border p-3 wt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Change Password</h2>

            <hr />
        </div>
        <span class="text-danger">@TempData["errorMessage"]</span>
        <div class="mb-3">
            <input type="email" asp-for="Email" class="form-control" hidden></input>
        </div>

        <div class="mb-3">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control"></input>
            <span asp-validation-for="Password" class="text-danger" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update Password</button>

    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
            }