@model UserModel
@{
    ViewData["Title"] = "Forget Password";
}
<form method="post" asp-controller="Login" asp-action="Delete">

    <div class="border p-3 wt-4">
        <div class="row pb-2">
            <h2 class="text-danger">Are you sure! You are deleting @Model.FirstName @Model.LastName @Model.Email</h2>

            <hr />
        </div>
        <span class="text-danger">@TempData["errorMessage"]</span>
        <div class="mb-3">
            <input type="email" asp-for="Email" class="form-control" hidden></input>
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>

    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
            }