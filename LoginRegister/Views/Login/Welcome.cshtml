@model IEnumerable<UserModel>
@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Gender
            </th>
            <th>
                Email
            </th>
            <th>
                Password
            </th>
            <th>
                City
            </th>
            <th>
                State
            </th>
            <th>
                ZipCode
            </th>
            <th>
                Country
            </th>
            <th>
                Interest
            </th>
            <th>
                Forget Password
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var m in Model)
        {
         <tr>
             <td>
                 @m.FirstName
             </td>
                <td>
                    @m.LastName
                </td>
                <td>
                    @m.Gender
                </td>
                <td>
                    @m.Email
                </td>
                <td>
                    @m.Password
                </td>
                <td>
                    @m.City
                </td>
                <td>
                    @m.State
                </td>
                <td>
                    @m.ZipCode
                </td>
                <td>
                    @m.Country
                </td>
                <td>
                    @m.Interest
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" asp-controller="Login" asp-action="ForgetPassword" asp-route-email="@m.Email">Forget Password</a>
                </td>
                <td>
                    <a class="btn btn-sm btn-danger" asp-controller="Login" asp-action="Delete" asp-route-email="@m.Email">Delete</a>
                </td>
         </tr>   
        }
    </tbody>
</table>